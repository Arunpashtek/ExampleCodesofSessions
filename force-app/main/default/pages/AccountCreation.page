<apex:page controller="AccountCretaionCtrl">
    <apex:form >
        <apex:pageBlock >
            <apex:pageBlockSection >
                <apex:inputField value="{!actObj.Name}"/>
                <apex:inputField value="{!actObj.Type}"/>
            </apex:pageBlockSection>
            <apex:pageBlockButtons >
                <apex:commandButton value="Save" action="{!createAccount}"/>
            </apex:pageBlockButtons>
        </apex:pageBlock>
        <apex:pageBlocK >
            <apex:pageblockSection title="Contacts" columns="1">
                 <apex:pageBlockTable value="{!contactlist}" var="contObj">
                    <apex:column value="{!contObj.LastName}"/>
                </apex:pageBlockTable>
            </apex:pageblockSection>
            <apex:pageblockSection title="Opportunities" columns="1">
                 <apex:pageBlockTable value="{!opportunityList}" var="oppObj">
                    <apex:column value="{!oppObj.Name}"/>
                </apex:pageBlockTable>
            </apex:pageblockSection>
            
        </apex:pageBlocK>
    </apex:form>
</apex:page>